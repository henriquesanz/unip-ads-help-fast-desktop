<Window x:Class="HelpFastDesktop.Presentation.Views.RelatoriosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exportar Relatórios" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0F172A">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0F172A" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Card -->
        <Grid Grid.Row="1"
              Margin="0,0,0,40"
              HorizontalAlignment="Center"
              VerticalAlignment="Top">
            <Border Background="#132032"
                    CornerRadius="28"
                    Padding="40"
                    Width="320">
                <StackPanel>
                    <TextBlock Text="Escolha o mês:"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,12"/>

                    <ComboBox ItemsSource="{Binding MesesDisponiveis}"
                              SelectedItem="{Binding MesSelecionado}"
                              DisplayMemberPath="Descricao"
                              Background="White"
                              Foreground="#1C2937"
                              BorderBrush="Transparent"
                              Height="38"
                              Margin="0,0,0,24"/>

                    <Button Content="{Binding IsLoading, Converter={StaticResource LoadingToTextConverter}, ConverterParameter='Baixar Relatório|Gerando...'}"
                            Click="BaixarRelatorioButton_Click"
                            IsEnabled="{Binding PodeExportar}"
                            Height="48"
                            Margin="0,0,0,16"
                            Style="{StaticResource ActionButtonStyle}"/>

                    <TextBlock Text="{Binding Mensagem}"
                               Foreground="#9CA3AF"
                               FontSize="12"
                               TextAlignment="Center"
                               Margin="0,18,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

