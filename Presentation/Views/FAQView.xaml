<Window x:Class="HelpFastDesktop.Presentation.Views.FAQView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FAQ - Perguntas Frequentes" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500"
        Background="#1D2935">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF8C00" Height="80">
            <Grid Margin="20,10">
                <TextBlock Text="FAQ - Perguntas Frequentes" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding TermoBusca, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     Background="#505053"
                     Foreground="White"
                     BorderBrush="#505053"
                     Padding="10,8"
                     KeyDown="TextBox_KeyDown"/>
            <Button Grid.Column="1"
                    Content="BUSCAR"
                    Click="BuscarButton_Click"
                    Height="35"
                    Width="100"
                    Background="#FF8C00"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="10"
                    FontWeight="Bold"
                    Margin="10,0,0,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF9F40"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="2" Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Error Message -->
            <TextBlock Grid.Row="0"
                       Text="{Binding ErrorMessage}" 
                       Foreground="#FF6464"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- FAQs List -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding FAQs}"
                     SelectedItem="{Binding FAQSelecionado}"
                     SelectionChanged="ListBox_SelectionChanged"
                     Background="#464649"
                     Foreground="White"
                     BorderBrush="#505053">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#3C3C3F" 
                                CornerRadius="5" 
                                Margin="5" 
                                Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Pergunta}" 
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="#FF8C00"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding Resposta}" 
                                           FontSize="10"
                                           Foreground="#DCDCDC"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20">
            <Button Content="ATUALIZAR"
                    Click="AtualizarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Height="35"
                    Width="120"
                    Background="#FF8C00"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="10"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF9F40"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="FECHAR"
                    Click="FecharButton_Click"
                    Height="35"
                    Width="100"
                    Background="#505053"
                    Foreground="#C8C8C8"
                    BorderThickness="0"
                    FontSize="10"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#606063"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

