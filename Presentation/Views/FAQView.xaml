<Window x:Class="HelpFastDesktop.Presentation.Views.FAQView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HelpFastDesktop.Presentation.Views"
        Title="FAQ - Perguntas Frequentes" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500"
        Background="#161D28"
        WindowState="Maximized">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161D28" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Content Area - Box azul-cinza médio -->
        <Border Grid.Row="1" 
                Background="#4F678D" 
                CornerRadius="10" 
                Margin="50,20,50,20"
                Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título FAQ: -->
                <TextBlock Grid.Row="0"
                           Text="FAQ:"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Error Message -->
                <TextBlock Grid.Row="0"
                           Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           Margin="0,40,0,10"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Grid 2x2 dos FAQs -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- FAQ Item 1 (Top-Left) -->
                    <local:FAQExpanderControl x:Name="FAQItem1" Grid.Row="0" Grid.Column="0"
                                              DataContext="{Binding FAQs[0]}"
                                              FAQItem="{Binding FAQs[0]}"
                                              Margin="0,0,10,10"
                                              Click="FAQItem_Click"/>

                    <!-- FAQ Item 2 (Top-Right) -->
                    <local:FAQExpanderControl x:Name="FAQItem2" Grid.Row="0" Grid.Column="1"
                                              DataContext="{Binding FAQs[1]}"
                                              FAQItem="{Binding FAQs[1]}"
                                              Margin="10,0,0,10"
                                              Click="FAQItem_Click"/>

                    <!-- FAQ Item 3 (Bottom-Left) -->
                    <local:FAQExpanderControl x:Name="FAQItem3" Grid.Row="1" Grid.Column="0"
                                              DataContext="{Binding FAQs[2]}"
                                              FAQItem="{Binding FAQs[2]}"
                                              Margin="0,10,10,0"
                                              Click="FAQItem_Click"/>

                    <!-- FAQ Item 4 (Bottom-Right) -->
                    <local:FAQExpanderControl x:Name="FAQItem4" Grid.Row="1" Grid.Column="1"
                                              DataContext="{Binding FAQs[3]}"
                                              FAQItem="{Binding FAQs[3]}"
                                              Margin="10,10,0,0"
                                              Click="FAQItem_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="20,20,20,30">
            <Button Content="IR PARA O CHAT"
                    Click="ChatIAButton_Click"
                    Width="200"
                    Height="50"
                    FontSize="16"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>

