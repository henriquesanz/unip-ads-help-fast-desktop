<Window x:Class="HelpFastDesktop.Presentation.Views.NovoChamadoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Chamado" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="400"
        Background="#161D28"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161D28" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,0">
            <StackPanel Margin="0,10">
                
                <!-- Assunto Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Assunto do chamado:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="AssuntoTextBox"
                             Text="{Binding Assunto, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="AssuntoTextBox_TextChanged"
                             Height="45"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Motivo Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Descreva o problema ou solicitação:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="MotivoTextBox"
                             Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="MotivoTextBox_TextChanged"
                             Height="200"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="30,20">
            
            <Button Content="{Binding IsLoading, Converter={StaticResource LoadingToTextConverter}, ConverterParameter='CRIAR CHAMADO'}"
                    Click="CriarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Width="150"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="CANCELAR"
                    Click="CancelarButton_Click"
                    Width="120"
                    Style="{StaticResource ActionButtonStyle}"/>

        </StackPanel>
    </Grid>
</Window>

