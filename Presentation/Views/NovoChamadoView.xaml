<Window x:Class="HelpFastDesktop.Presentation.Views.NovoChamadoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Chamado" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="400"
        Background="#161D28"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161D28" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,0">
            <StackPanel Margin="0,10">
                
                <!-- Assunto Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Assunto do chamado:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <Grid>
                        <TextBox x:Name="AssuntoTextBox"
                                 Text="{Binding Assunto, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="AssuntoTextBox_TextChanged"
                                 Height="52"
                                 Background="White"
                                 Foreground="#161D28"
                                 BorderBrush="#1C2937"
                                 BorderThickness="1"
                                 Padding="16,12"
                                 FontSize="14"
                                 FontWeight="SemiBold"/>
                        <TextBlock Text="Escreva o assunto aqui:"
                                   Foreground="#8A8F9C"
                                   Margin="18,12,0,0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=AssuntoTextBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocusWithin, ElementName=AssuntoTextBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Motivo Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Motivo:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <Grid>
                        <TextBox x:Name="MotivoTextBox"
                                 Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="MotivoTextBox_TextChanged"
                                 Height="220"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="White"
                                 Foreground="#161D28"
                                 BorderBrush="#1C2937"
                                 BorderThickness="1"
                                 Padding="16,12"
                                 FontSize="14"
                                 FontWeight="SemiBold"/>
                        <TextBlock Text="Escreva o motivo aqui:"
                                   Foreground="#8A8F9C"
                                   Margin="18,12,0,0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=MotivoTextBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocusWithin, ElementName=MotivoTextBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="30,20">

            <Button Content="Voltar ao menu"
                    Click="CancelarButton_Click"
                    Width="160"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="{Binding IsLoading, Converter={StaticResource LoadingToTextConverter}, ConverterParameter='Abrir chamado|Abrindo...'}"
                    Click="CriarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Width="160"
                    Style="{StaticResource ActionButtonStyle}"/>

        </StackPanel>
    </Grid>
</Window>

