<Window x:Class="HelpFastDesktop.Presentation.Views.ChatIAView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat com IA" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="500"
        Background="#1D2935">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" Height="80">
            <Grid Margin="20,10">
                <TextBlock Text="Chat com InteligÃªncia Artificial" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Messages Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="20,10"
                      Background="#464649"
                      Padding="10">
            <ItemsControl ItemsSource="{Binding Mensagens}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding EhUsuario, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#0078D7|#464649'}"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,5"
                                HorizontalAlignment="{Binding EhUsuario, Converter={StaticResource BooleanToAlignmentConverter}}"
                                MaxWidth="500">
                            <StackPanel>
                                <TextBlock Text="{Binding Texto}"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           FontSize="11"/>
                                <TextBlock Text="{Binding DataEnvio, StringFormat='{}{0:HH:mm}'}"
                                           Foreground="#DCDCDC"
                                           FontSize="9"
                                           HorizontalAlignment="Right"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Error Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}" 
                   Foreground="#FF6464"
                   Margin="20,5"
                   TextWrapping="Wrap"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Input Area -->
        <Grid Grid.Row="3" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding MensagemAtual, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     Background="#505053"
                     Foreground="White"
                     BorderBrush="#505053"
                     Padding="10,8"
                     KeyDown="TextBox_KeyDown"/>
            <Button Grid.Column="1"
                    Content="ENVIAR"
                    Click="EnviarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Height="40"
                    Width="100"
                    Background="#9C27B0"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="11"
                    FontWeight="Bold"
                    Margin="10,0,0,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#BA68C8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>

