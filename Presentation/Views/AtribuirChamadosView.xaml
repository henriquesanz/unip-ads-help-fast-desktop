<Window x:Class="HelpFastDesktop.Presentation.Views.AtribuirChamadosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atribuir Chamados" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500"
        Background="#161D28"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161D28" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Chamados List -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Chamados Abertos:" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <DataGrid ItemsSource="{Binding Chamados}"
                          SelectedItem="{Binding ChamadoSelecionado}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          Background="#464649"
                          Foreground="White"
                          BorderBrush="#505053"
                          RowBackground="#464649"
                          AlternatingRowBackground="#3C3C3F"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nome}" Width="*"/>
                        <DataGridTextColumn Header="Motivo" Binding="{Binding Motivo}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataAbertura, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Atribuição Panel -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Atribuir para:" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <ComboBox ItemsSource="{Binding Tecnicos}"
                          SelectedItem="{Binding TecnicoSelecionado}"
                          DisplayMemberPath="Nome"
                          Height="35"
                          Background="#161D28"
                          Foreground="White"
                          BorderBrush="#161D28"
                          Margin="0,0,0,20"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <Button Content="ATRIBUIR"
                        Click="AtribuirButton_Click"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20">
            <Button Content="ATUALIZAR"
                    Click="AtualizarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Width="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="FECHAR"
                    Click="FecharButton_Click"
                    Width="100"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>

