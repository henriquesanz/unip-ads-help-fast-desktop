<Window x:Class="HelpFastDesktop.Presentation.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HELP FAST - Dashboard" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        MinWidth="1000"
        MinHeight="600"
        Background="#2D2D30">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D7" Height="100">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- User Info -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding NomeUsuario, StringFormat='Bem-vindo, {0}'}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock FontSize="11" 
                               Foreground="#DCDCDC">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="TipoUsuario"/>
                                <Binding Path="DescricaoTipoUsuario"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Logout Button -->
                <Button Grid.Column="1" 
                        Content="LOGOUT"
                        Command="{Binding LogoutCommand}"
                        Height="40"
                        Width="120"
                        Background="#C83232"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="10"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E04545"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#A52A2A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#3C3C3F">
            <StackPanel Margin="20">
                
                <!-- Main Title -->
                <TextBlock Text="Dashboard - Ações Disponíveis" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,30"/>

                <!-- Sections -->
                <ItemsControl ItemsSource="{Binding Sections}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#464649" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,20" 
                                    Padding="15">
                                
                                <StackPanel>
                                    <!-- Section Title -->
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="14" 
                                               FontWeight="Bold" 
                                               Foreground="#0078D7"
                                               Margin="0,0,0,15"/>
                                    
                                    <!-- Actions Grid -->
                                    <ItemsControl ItemsSource="{Binding Actions}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="3"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding Command}"
                                                        Height="100"
                                                        Margin="8"
                                                        Background="{Binding Color}"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        FontSize="10"
                                                        FontWeight="Bold"
                                                        Cursor="Hand"
                                                        ToolTip="{Binding Description}">
                                                    
                                                    <Button.Content>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Title}" 
                                                                       FontWeight="Bold"
                                                                       TextWrapping="Wrap"
                                                                       TextAlignment="Center"
                                                                       Margin="0,0,0,5"/>
                                                            <TextBlock Text="{Binding Description}" 
                                                                       FontSize="8"
                                                                       TextWrapping="Wrap"
                                                                       TextAlignment="Center"
                                                                       Opacity="0.9"/>
                                                        </StackPanel>
                                                    </Button.Content>
                                                    
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                CornerRadius="5">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"
                                                                                            Margin="10"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="RenderTransform">
                                                                                    <Setter.Value>
                                                                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
