<Window x:Class="HelpFastDesktop.Presentation.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HELP FAST - Home" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        MinWidth="1000"
        MinHeight="600"
        Background="#1C2937"
        Style="{x:Null}">
    
    <Window.Resources>
        <Style x:Key="DashboardActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Margin" Value="10,12,10,0"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinWidth" Value="300"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#1C2937">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Button Content="Sair"
                    Click="LogoutButton_Click"
                    Width="120"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ActionButtonStyle}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  MaxWidth="960">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0"
                       Source="pack://application:,,,/Assets/Images/logo.png"
                       Height="80"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

                <TextBlock Grid.Row="1"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,20">
                    <TextBlock.Text>
                        <MultiBinding StringFormat='OlÃ¡ {0}'>
                            <Binding Path="NomeUsuario"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <ItemsControl Grid.Row="2"
                              ItemsSource="{Binding AllActions}"
                              Margin="0,10,0,0"
                              HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Width="{Binding ActionsContainerWidth}"
                                       ItemWidth="300"
                                       MinWidth="320"
                                       HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource DashboardActionButtonStyle}"
                                    Command="{Binding Command}"
                                    ToolTip="{Binding Description}">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#161D28"
                                           TextAlignment="Center"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
