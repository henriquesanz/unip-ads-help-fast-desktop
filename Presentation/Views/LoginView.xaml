<Window x:Class="HelpFastDesktop.Presentation.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HELP FAST - Login" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="500"
        Background="#161D28"
        Style="{x:Null}">
    
    <Grid>
        <!-- Login Form Panel -->
        <Border Background="#1C2937"
                Margin="5"
                Width="440"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="50">
            <StackPanel HorizontalAlignment="Stretch">
                
                <!-- Logo -->
                <Image Source="pack://application:,,,/Assets/Images/logo.png"
                       Width="160"
                       Height="160"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0"/>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,20"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="E-mail:" 
                               FontSize="10" 
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                             TextChanged="EmailTextBox_TextChanged"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"
                             HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,20"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="Senha:" 
                               FontSize="10" 
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="SenhaPasswordBox"
                                 Height="35"
                                 Background="#505053"
                                 Foreground="White"
                                 BorderBrush="#505053"
                                 Padding="10,8"
                                 PasswordChanged="SenhaPasswordBox_PasswordChanged"
                                 HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="{Binding IsLoading, Converter={StaticResource LoadingToTextConverter}, ConverterParameter='Login|Entrando...'}"
                        Click="LoginButton_Click"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource ActionButtonStyle}"/>

                <TextBlock Text="OU"
                           Foreground="#9AA5B1"
                           FontSize="12"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <!-- Register Button -->
                <Button Content="Cadastrar"
                        Click="CadastrarButton_Click"
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource ActionButtonStyle}"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
