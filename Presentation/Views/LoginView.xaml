<Window x:Class="HelpFastDesktop.Presentation.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HELP FAST - Login" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="500"
        Background="#1D2935">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Logo Panel -->
        <Border Grid.Column="0" Background="#1D2935">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Assets/Images/logo.png" 
                       Width="150" 
                       Height="150"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Login Form Panel -->
        <Border Grid.Column="1" Background="#3C3C3F" Margin="30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                
                <!-- Title -->
                <TextBlock Text="Login" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="E-mail:" 
                               FontSize="10" 
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                             TextChanged="EmailTextBox_TextChanged"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Senha:" 
                               FontSize="10" 
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="SenhaPasswordBox"
                                 Height="35"
                                 Background="#505053"
                                 Foreground="White"
                                 BorderBrush="#505053"
                                 Padding="10,8"
                                 PasswordChanged="SenhaPasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="{Binding IsLoading, Converter={StaticResource LoadingToTextConverter}}"
                        Click="LoginButton_Click"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Height="45"
                        Background="#0078D7"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        FontWeight="Bold"
                        Margin="0,0,0,15"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#106EBE"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#005A9E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Register Button -->
                <Button Content="CADASTRAR"
                        Click="CadastrarButton_Click"
                        Background="Transparent"
                        Foreground="#0078D7"
                        BorderThickness="0"
                        FontSize="10"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
