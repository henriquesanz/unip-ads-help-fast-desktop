<Window x:Class="HelpFastDesktop.Presentation.Views.GerenciarUsuariosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar Usuários" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500"
        Background="#161D28"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161D28" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <DataGrid ItemsSource="{Binding Usuarios}"
                      SelectedItem="{Binding UsuarioSelecionado}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      Background="#464649"
                      Foreground="White"
                      BorderBrush="#505053"
                      RowBackground="#464649"
                      AlternatingRowBackground="#3C3C3F"
                      SelectionMode="Single"
                      SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="150"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding TipoUsuarioDisplay}" Width="150"/>
                    <DataGridTextColumn Header="Último Login" Binding="{Binding UltimoLogin, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20">
            <Button Content="CADASTRAR"
                    Click="CadastrarButton_Click"
                    Width="130"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="EDITAR"
                    Click="EditarButton_Click"
                    IsEnabled="{Binding UsuarioSelecionado, Converter={StaticResource NullToBooleanConverter}}"
                    Width="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="EXCLUIR"
                    Click="ExcluirButton_Click"
                    IsEnabled="{Binding UsuarioSelecionado, Converter={StaticResource NullToBooleanConverter}}"
                    Width="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="ATUALIZAR"
                    Click="AtualizarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Width="120"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="FECHAR"
                    Click="FecharButton_Click"
                    Width="100"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>

