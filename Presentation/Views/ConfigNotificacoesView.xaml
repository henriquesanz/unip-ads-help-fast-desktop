<Window x:Class="HelpFastDesktop.Presentation.Views.ConfigNotificacoesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurar Notificações" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600"
        MinHeight="500"
        Background="#1D2935">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F44336" Height="80">
            <Grid Margin="20,10">
                <TextBlock Text="Configurar Notificações" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30">
            <StackPanel Margin="0,20">
                <TextBlock Text="Canais de Notificação:" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                
                <CheckBox Content="E-mail" 
                          IsChecked="{Binding Configuracao.EmailAtivo}"
                          Foreground="White"
                          Margin="0,5"/>
                <CheckBox Content="Push Notification" 
                          IsChecked="{Binding Configuracao.PushAtivo}"
                          Foreground="White"
                          Margin="0,5"/>
                <CheckBox Content="Notificação no Sistema" 
                          IsChecked="{Binding Configuracao.InAppAtivo}"
                          Foreground="White"
                          Margin="0,5,0,20"/>

                <TextBlock Text="Tipos de Notificação:" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                
                <CheckBox Content="Notificar mudanças de status" 
                          IsChecked="{Binding Configuracao.NotificarStatus}"
                          Foreground="White"
                          Margin="0,5"/>
                <CheckBox Content="Notificar atribuições" 
                          IsChecked="{Binding Configuracao.NotificarAtribuicao}"
                          Foreground="White"
                          Margin="0,5"/>
                <CheckBox Content="Notificar resoluções" 
                          IsChecked="{Binding Configuracao.NotificarResolucao}"
                          Foreground="White"
                          Margin="0,5"/>
                <CheckBox Content="Notificar comentários" 
                          IsChecked="{Binding Configuracao.NotificarComentarios}"
                          Foreground="White"
                          Margin="0,5"/>
                <CheckBox Content="Notificar escalações" 
                          IsChecked="{Binding Configuracao.NotificarEscalacao}"
                          Foreground="White"
                          Margin="0,5,0,20"/>

                <TextBlock Text="Frequência:" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <ComboBox SelectedItem="{Binding Configuracao.Frequencia}"
                          Height="35"
                          Background="#505053"
                          Foreground="White"
                          BorderBrush="#505053"
                          Padding="10,8">
                    <ComboBoxItem Content="Imediato"/>
                    <ComboBoxItem Content="Diário"/>
                    <ComboBoxItem Content="Semanal"/>
                </ComboBox>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20">
            <Button Content="SALVAR"
                    Click="SalvarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Height="40"
                    Width="120"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="11"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D32F2F"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="FECHAR"
                    Click="FecharButton_Click"
                    Height="40"
                    Width="100"
                    Background="#505053"
                    Foreground="#C8C8C8"
                    BorderThickness="0"
                    FontSize="11"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#606063"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

