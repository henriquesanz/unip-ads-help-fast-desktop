<Window x:Class="HelpFastDesktop.Presentation.Views.AuditoriaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs de Auditoria" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500"
        Background="#1D2935">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#795548" Height="80">
            <Grid Margin="20,10">
                <TextBlock Text="Logs de Auditoria" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Error Message -->
            <TextBlock Grid.Row="0"
                       Text="{Binding ErrorMessage}" 
                       Foreground="#FF6464"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Logs List -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Logs}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      Background="#464649"
                      Foreground="White"
                      BorderBrush="#505053"
                      RowBackground="#464649"
                      AlternatingRowBackground="#3C3C3F">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Data/Hora" Binding="{Binding DataAcao, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" Width="150"/>
                    <DataGridTextColumn Header="Usuário" Binding="{Binding UsuarioDisplay}" Width="150"/>
                    <DataGridTextColumn Header="Ação" Binding="{Binding TipoOperacao}" Width="120"/>
                    <DataGridTextColumn Header="Tabela" Binding="{Binding Tabela}" Width="150"/>
                    <DataGridTextColumn Header="Registro ID" Binding="{Binding RegistroId}" Width="100"/>
                    <DataGridTextColumn Header="Resumo" Binding="{Binding ResumoOperacao}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20">
            <Button Content="ATUALIZAR"
                    Click="AtualizarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Height="35"
                    Width="120"
                    Background="#795548"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="10"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6D4C41"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="FECHAR"
                    Click="FecharButton_Click"
                    Height="35"
                    Width="100"
                    Background="#505053"
                    Foreground="#C8C8C8"
                    BorderThickness="0"
                    FontSize="10"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#606063"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

