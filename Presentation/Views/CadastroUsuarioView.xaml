<Window x:Class="HelpFastDesktop.Presentation.Views.CadastroUsuarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TituloFormulario}" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="450"
        MinHeight="550"
        Background="#161D28"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#161D28" Height="100" Padding="0,20">
            <Image Source="pack://application:,,,/Assets/Images/logo.png"
                   Height="60"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,0">
            <StackPanel Margin="0,10">
                
                <!-- Nome Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Nome Completo:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="NomeTextBox"
                             Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="NomeTextBox_TextChanged"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="E-mail:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="EmailTextBox_TextChanged"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Telefone Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Telefone:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TelefoneTextBox"
                             Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="TelefoneTextBox_TextChanged"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Senha Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Senha:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="SenhaPasswordBox"
                                 Height="35"
                                 Background="#505053"
                                 Foreground="White"
                                 BorderBrush="#505053"
                                 Padding="10,8"
                                 PasswordChanged="SenhaPasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Tipo de Usuário Field (apenas quando há múltiplas opções) -->
                <StackPanel Margin="0,0,0,20" 
                            Visibility="{Binding MostrarTipoUsuario, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Tipo de Usuário:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="TipoUsuarioComboBox"
                              ItemsSource="{Binding TiposUsuarioDisponiveis}"
                              SelectedItem="{Binding TipoUsuarioSelecionado}"
                              SelectionChanged="TipoUsuarioComboBox_SelectionChanged"
                              Height="35"
                              Background="#505053"
                              Foreground="White"
                              BorderBrush="#505053"
                              Padding="10,8">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource UserRoleToStringConverter}}" Foreground="Black"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="30,20">
            
            <Button Content="{Binding TextoBotaoSalvar}"
                    Click="SalvarButton_Click"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                    Width="150"
                    Margin="0,0,10,0"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Content="CANCELAR"
                    Click="CancelarButton_Click"
                    Width="120"
                    Style="{StaticResource ActionButtonStyle}"/>

        </StackPanel>
    </Grid>
</Window>
