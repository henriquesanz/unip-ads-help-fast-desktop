<Window x:Class="HelpFastDesktop.Presentation.Views.CadastroUsuarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TituloFormulario}" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding TituloFormulario}"
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="30,20"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,0">
            <StackPanel Margin="0,10">
                
                <!-- Nome Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Nome Completo:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="E-mail:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Telefone Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Telefone:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"
                             Background="#505053"
                             Foreground="White"
                             BorderBrush="#505053"
                             Padding="10,8"/>
                </StackPanel>

                <!-- Senha Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Senha:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="SenhaPasswordBox"
                                 Height="35"
                                 Background="#505053"
                                 Foreground="White"
                                 BorderBrush="#505053"
                                 Padding="10,8"
                                 PasswordChanged="SenhaPasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Tipo de Usuário Field (apenas quando há múltiplas opções) -->
                <StackPanel Margin="0,0,0,20" 
                            Visibility="{Binding MostrarTipoUsuario, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Tipo de Usuário:" 
                               FontSize="10" 
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding TiposUsuarioDisponiveis}"
                              SelectedItem="{Binding TipoUsuarioSelecionado}"
                              Height="35"
                              Background="#505053"
                              Foreground="White"
                              BorderBrush="#505053"
                              Padding="10,8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource UserRoleToStringConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF6464"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons Panel -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="30,20">
            
            <Button Content="{Binding TextoBotaoSalvar}"
                    Command="{Binding SalvarCommand}"
                    Height="40"
                    Width="150"
                    Background="#0078D7"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="11"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#106EBE"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#005A9E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="CANCELAR"
                    Command="{Binding CancelarCommand}"
                    Height="40"
                    Width="120"
                    Background="#505053"
                    Foreground="#C8C8C8"
                    BorderThickness="0"
                    FontSize="11"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#606063"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>
